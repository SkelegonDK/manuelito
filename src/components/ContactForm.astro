--- 
// src/components/ContactForm.astro
const turnstileSiteKey = process.env.TURNSTYLE_SITE_KEY; //  User-provided site key
---
<form data-static-form-name="contact" class="space-y-4 max-w-xl mx-auto">
  <div>
    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
    <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm p-2">
  </div>
  <div>
    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
    <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm p-2">
  </div>
  <div>
    <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
    <input type="text" id="subject" name="subject" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm p-2">
  </div>
  <div>
    <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
    <textarea id="message" name="message" rows="4" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm p-2"></textarea>
  </div>

  <!-- Cloudflare Turnstile Widget -->
  <div class="cf-turnstile" data-sitekey={turnstileSiteKey}></div>

  <div>
    <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:bg-indigo-500 dark:hover:bg-indigo-600">
      Submit
    </button>
  </div>
</form>

<!-- Script for Cloudflare Turnstile -->
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<style>
  /* Basic styling for inputs */
  input, textarea {
    transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  input:focus, textarea:focus {
    outline: none;
    border-color: var(--tw-ring-color); /* Use Tailwind focus color */
    box-shadow: 0 0 0 2px var(--tw-ring-color);
  }
</style>
