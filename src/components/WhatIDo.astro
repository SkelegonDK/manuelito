---
// Import Font Awesome 6 icons from react-icons
import { FaLaptopCode } from "react-icons/fa6";
import { FaPaintbrush } from "react-icons/fa6";
import { FaMobileScreen } from "react-icons/fa6";
import { FaPeopleGroup } from "react-icons/fa6";
import { FaToolbox } from "react-icons/fa6";

// Define your professional skills and experience here
const skills = [
  {
    title: "Web Development",
    icon: FaLaptopCode,
    description: "Building responsive, accessible, and performant web applications using modern frameworks and technologies."
  },
  {
    title: "UI/UX Design",
    icon: FaPaintbrush,
    description: "Creating intuitive and beautiful user interfaces with a focus on user experience and accessibility."
  },
  {
    title: "Mobile Development",
    icon: FaMobileScreen,
    description: "Developing cross-platform mobile applications that provide native-like experiences."
  },
  {
    title: "Technical Leadership",
    icon: FaPeopleGroup,
    description: "Leading technical teams, mentoring developers, and ensuring project success through effective communication and planning."
  }
];

// Define your professional projects
const projects = [
  {
    title: "E-commerce Platform",
    description: "Developed a full-featured e-commerce platform with integrated payment processing and inventory management.",
    technologies: ["React", "Node.js", "MongoDB", "Stripe"]
  },
  {
    title: "Healthcare Application",
    description: "Built a HIPAA-compliant healthcare application for patient management and appointment scheduling.",
    technologies: ["Vue.js", "Express", "PostgreSQL", "Docker"]
  },
  {
    title: "Educational Platform",
    description: "Created an interactive learning platform with real-time collaboration features for students and educators.",
    technologies: ["Next.js", "Firebase", "WebRTC", "TailwindCSS"]
  }
];

const bgClasses = [
  "bg-white/10 dark:bg-black/10 rounded-xl",
  "bg-white/10 dark:bg-black/10 rounded-xl",
  "bg-white/10 dark:bg-black/10 rounded-xl",
  "bg-white/10 dark:bg-black/10 rounded-xl",
];

const getRandomClass = () => {
  return bgClasses[Math.floor(Math.random() * bgClasses.length)];
};
---

<section class="flex flex-col text-center gap-8">
  
  <!-- Skills Section -->
  <div class="py-8">
    <h3 class="text-2xl font-semibold mb-8 text-black dark:text-white">Skills & Expertise</h3>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 list-none">
      {
        skills.map((skill) => (
          <li class="bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl p-6 text-left flex flex-col gap-3 transition">
            <div class="text-4xl text-black dark:text-white">
              <skill.icon size={40} />
            </div>
            <h4 class="text-xl font-medium text-black dark:text-white">{skill.title}</h4>
            <p class="text-black dark:text-gray-200">{skill.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
  
  <!-- Projects Section -->
  <div class="py-8">
    <h3 class="text-2xl font-semibold mb-8 text-black dark:text-white">Featured Projects</h3>
    <ul class="flex flex-col gap-8 list-none">
      {
        projects.map((project) => {
          const randomClass = getRandomClass();
          return (
            <li class="bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl p-6 text-left transition">
              <h4 class="text-xl font-medium mb-3 text-black dark:text-white">{project.title}</h4>
              <p class="mb-4 text-black dark:text-gray-200">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.technologies.map((tech) => (
                  <span class={`px-3 py-1 text-sm rounded-lg text-black dark:text-white ${randomClass}`}>{tech}</span>
                ))}
              </div>
            </li>
          )
        })
      }
    </ul>
  </div>
  
  <!-- Call to Action -->
  <div class="py-8">
    <p class="mb-4 text-black dark:text-gray-200">Interested in working together? Let's discuss your project!</p>
    <a href="/contact" class="inline-block bg-white/10 dark:bg-black/10 text-black dark:text-white font-medium py-2 px-6 rounded-xl transition border border-black dark:border-white">Get in Touch</a>
  </div>
</section>

<style>
  /* Ensure text is readable in both light and dark modes */
  :global(.dark) h3 {
    color: white;
  }
  
  /* Add subtle transition for color changes */
  li {
    transition: background-color 0.3s ease, color 0.3s ease;
  }
</style>
