---
// Import any necessary components or utilities
import { Image } from 'astro:assets';
import { FaEnvelope, FaGlobe, FaLinkedin, FaMapMarkerAlt } from "react-icons/fa";
import heroImage from "@/assets/manuel.png";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);


// You can add any necessary data or imports here
---

<section class="flex flex-col text-center gap-4">
  <div class="flex flex-col md:flex-row gap-8 py-12">
    <!-- Personal photo/avatar section -->
    <div class="md:w-1/3 flex justify-center">
      <div class="w-64 h-64 rounded-xl overflow-hidden border-4 border-white">
        <!-- Replace with your actual image path -->
         <Image src={heroImage} alt="Manuel Thomsen" class="w-full h-full object-contain" />
        <!-- <img src={heroImage} alt="Manuel Thomsen" class="w-full h-full object-contain" /> -->
      </div>
    </div>
    
    <!-- Personal bio section -->
    <div class="md:w-2/3 text-left flex flex-col gap-4">
      <h3 class="text-2xl font-semibold dark:text-white">Hi, I'm Manuel</h3>
      
      <p class="dark:text-gray-200">
        I'm an <strong>Accomplished Creative Technologist</strong> specializing in synthetic voice-over and voice-cloning. 
        My expertise spans content automation, AI workflows, and advanced technologies like AI-generated voiceover, 
        synthetic video, prompt engineering, and image generation.
      </p>
      
      <p class="dark:text-gray-200">
        With a proven track record working with multinational companies, I foster innovative digital experiences 
        that captivate and engage. Being fluent in <em>four languages</em> ensures effective global communication 
        and helps me bridge cultural gaps in technology implementation.
      </p>
      
      <!-- Contact information -->
      <div class="mt-4 p-6 bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
        <h4 class="text-xl font-medium mb-3 dark:text-white">Find me in:</h4>
        <ul class="space-y-2 ml-1 dark:text-gray-200">
          <li class="flex items-center gap-2">
            <FaMapMarkerAlt className="text-primary" /> Copenhagen, Denmark
          </li>
          <li class="flex items-center gap-2">
            <FaEnvelope className="text-primary" /> manuel@manuelito.tech
          </li>
          <li class="flex items-center gap-2">
            <FaGlobe className="text-primary" /> manuelito.tech
          </li>
          <li class="flex items-center gap-2">
            <FaLinkedin className="text-primary" /> linkedin.com/in/manuel-thomsen
          </li>
        </ul>
      </div>
      
      <!-- Languages and Software -->
      <div class="mt-4 flex flex-col md:flex-row gap-6">
        <div class="md:w-1/2 p-6 bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
          <h4 class="text-xl font-medium mb-3 dark:text-white">Languages:</h4>
          <ul class="space-y-1 ml-1 dark:text-gray-200">
            <li>Danish (Native)</li>
            <li>English (Bilingual)</li>
            <li>Italian (Bilingual)</li>
            <li>Spanish (Native)</li>
          </ul>
        </div>
        
        <div class="md:w-1/2 p-6 bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
          <h4 class="text-xl font-medium mb-3 dark:text-white">Tech Stack:</h4>
          <div class="flex flex-wrap gap-2 dark:text-gray-200">
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Mac OS</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">VS Code</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Figma</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Adobe CC</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Blender</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Google Colab</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">iA Presenter</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">iA Writer</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Ollama</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">CrewAI</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">ChatGPT</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Claude</span>
            <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Arc Browser</span>
          </div>
        </div>
      </div>
  </div>
</section>

<style>
  /* Ensure smooth transitions between light and dark modes */
  section {
    transition: color 0.3s ease, background-color 0.3s ease;
  }
  
  a {
    transition: color 0.3s ease, background-color 0.3s ease;
  }
  
  /* Add some subtle hover effects */
  .bg-white\/10:hover, .bg-black\/10:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease;
  }
</style> 