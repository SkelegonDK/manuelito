---
// Import any necessary components or utilities
import { Image } from 'astro:assets';
import { FaEnvelope, FaGlobe, FaLinkedin, FaMapMarkerAlt } from "react-icons/fa";
import heroImage from "@/assets/manuel.png";
import PreloadImageOnHover from './PreloadImageOnHover.astro';

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);
---

<section class="about-grid">
  <!-- Personal photo/avatar section -->
  <div class="photo-area flex justify-center items-center">
    <div class="w-64 h-64 rounded-xl overflow-hidden border-4 border-white backdrop-blur-md bg-white/5 dark:bg-black/5 image-container preload-trigger">
      <Image 
        src={heroImage} 
        alt="Manuel Thomsen" 
        loading="lazy" 
        class="w-full h-full object-contain transition-transform duration-300 hover-bounce" 
      />
      <!-- Preload any additional images you want to load on hover -->
      <PreloadImageOnHover src="/src/assets/mini_manu.jpeg" alt="Manuel Thomsen" />
      <PreloadImageOnHover src="/src/assets/AR_Museum.png" alt="AR Museum" />
      <PreloadImageOnHover src="/src/assets/skelegon_print.png" alt="Skelegon Print" />
    </div>
  </div>
  
  <!-- Personal bio section -->
  <div class="bio-area grid grid-cols-1 gap-4">
    <h3 class="text-2xl font-semibold dark:text-white">Hi, I'm Manuel</h3>
    
    <p class="dark:text-gray-200">
      I'm an <strong>Accomplished Creative Technologist</strong> specializing in synthetic voice-over and voice-cloning. 
      My expertise spans content automation, AI workflows, and advanced technologies like AI-generated voiceover, 
      synthetic video, prompt engineering, and image generation.
    </p>
    
    <p class="dark:text-gray-200">
      With a proven track record working with multinational companies, I foster innovative digital experiences 
      that captivate and engage. Being fluent in <em>four languages</em> ensures effective global communication 
      and helps me bridge cultural gaps in technology implementation.
    </p>
  </div>

  <!-- Core competencies -->
  <div class="competencies-area bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
    <div class="p-6">
      <h4 class="text-xl font-medium mb-4 dark:text-white">Core Competencies:</h4>
      <ul class="grid grid-cols-1 dark:text-gray-200">
        <li class="flex gap-2">
          <span class="mt-1.5">•</span>
          <span><strong>AI Content & Prompt Engineering:</strong> Expertise in AI-driven content creation, from voice and video to advanced image generation with Stable Diffusion.</span>
        </li>
        <li class="flex gap-2">
          <span class="mt-1.5">•</span>
          <span><strong>Digital Product Development:</strong> Skilled in conceptualizing and implementing digital solutions that captivate and engage.</span>
        </li>
        <li class="flex gap-2">
          <span class="mt-1.5">•</span>
          <span><strong>Synthetic Media Production:</strong> Creating AI-generated voiceovers and synthetic videos with tools like Elevenlabs, Synthesia and Heygen for multinational clients.</span>
        </li>
        <li class="flex gap-2">
          <span class="mt-1.5">•</span>
          <span><strong>Custom Voice Design:</strong> Planning, managing and selecting voice data for custom client voice models.</span>
        </li>
        <li class="flex gap-2">
          <span class="mt-1.5">•</span>
          <span><strong>Web Development:</strong> Advanced knowledge in frontend development, including HTML, CSS, JavaScript, Python, and frameworks like Streamlit and Astro.</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Languages -->
  <div class="languages-area bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
    <div class="p-6">
      <h4 class="text-xl font-medium mb-4 dark:text-white">Languages:</h4>
      <ul class="grid grid-cols-1 gap-2 dark:text-gray-200">
        <li>Danish (Native)</li>
        <li>English (Bilingual)</li>
        <li>Italian (Bilingual)</li>
        <li>Spanish (Native)</li>
      </ul>
    </div>
  </div>

  <!-- Contact information -->
  <div class="contact-area bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
    <div class="p-6">
      <h4 class="text-xl font-medium mb-4 dark:text-white">Find me in:</h4>
      <ul class="p-0 grid grid-cols-1 gap-3 dark:text-gray-200">
        <li class="flex items-center gap-2">
          <FaMapMarkerAlt className="text-primary" /> Copenhagen, Denmark
        </li>
        <li class="flex items-center gap-2">
          <FaEnvelope className="text-primary" /> contact@manuelito.tech
        </li>
        <li class="flex items-center gap-2">
          <FaGlobe className="text-primary" /> manuelito.tech
        </li>
        <li class="flex items-center gap-2">
          <FaLinkedin className="text-primary" /> linkedin.com/in/manuel-thomsen
        </li>
      </ul>
    </div>
  </div>
  
  <!-- Tech Stack -->
  <div class="tech-area bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-xl">
    <div class="p-6">
      <h4 class="text-xl font-medium mb-4 dark:text-white">Tech Stack:</h4>
      <div class="flex flex-wrap gap-2 dark:text-gray-200">
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Mac OS</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Cursor</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Figma</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Adobe CC</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Blender</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Google Colab</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">iA Presenter</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">iA Writer</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Ollama</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">CrewAI</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Perplexity</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">Claude</span>
        <span class="px-2 py-1 bg-white/10 dark:bg-black/20 rounded-md text-sm">ComfyUI</span>
      </div>
    </div>
  </div>

</section>

<style>
  /* Main grid layout */
  .about-grid {
    display: grid;
    width: 100%;
    max-width: none;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  /* Mobile layout (stacked) */
  .about-grid {
    grid-template-areas:
      "photo"
      "bio"
      "contact"
      "competencies"
      "languages"
      "tech"
      "experience"
      "approach";
  }

  /* Desktop layout (asymmetric grid) */
  @media (min-width: 768px) {
    .about-grid {
      grid-template-columns: repeat(12, 1fr);
      grid-template-areas:
        "photo photo photo photo bio bio bio bio bio bio bio bio"
        
        "competencies competencies competencies competencies competencies competencies competencies competencies competencies competencies competencies competencies"
        
        
        "languages languages languages languages tech tech tech tech tech tech tech tech"
        
        "contact contact contact contact contact contact contact contact contact contact contact contact";

        
    }
  }

  /* Assign grid areas */
  .photo-area { grid-area: photo; }
  .bio-area { grid-area: bio; }
  .contact-area { grid-area: contact; }
  .competencies-area { grid-area: competencies; }
  .languages-area { grid-area: languages; }
  .tech-area { grid-area: tech; }
  .experience-area { grid-area: experience; }
  .approach-area { grid-area: approach; }

  /* Ensure smooth transitions between light and dark modes */
  section {
    transition: color 0.3s ease, background-color 0.3s ease;
  }
  
  a {
    transition: color 0.3s ease, background-color 0.3s ease;
  }
  
  /* Add some subtle hover effects */
  .bg-white\/10:hover, .bg-black\/10:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease;
  }

  /* Image hover animation */
  .image-container {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .image-container:hover .hover-bounce {
    animation: bounce-up 0.5s ease;
  }

  @keyframes bounce-up {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
    75% {
      transform: translateY(-5px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style> 